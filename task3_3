fn main() {
    let days = [
        "первый", "второй", "третий", "четвертый", "пятый", "шестой",
        "седьмой", "восьмой", "девятый", "десятый", "одиннадцатый", "двенадцатый",
    ];

    let gifts = [
        "куропатку на грушевом дереве",
        "двое голубей",
        "трех французских курицы",
        "четырех щебечущих пташек",
        "пять золотых колец",
        "шесть несущихся гусей",
        "семь плавающих лебедей",
        "восемь доящихся коров",
        "девять танцующих дам",
        "десять прыгающих господ",
        "одиннадцать играющих волынщиков",
        "двенадцать барабанящих барабанщиков",
    ];

    for day in 0..12 {
        println!("В {} день Рождества моя любимая подарила мне:", days[day]);

        for gift in (0..=day).rev() {
            let prefix = if day > 0 && gift == 0 { "и " } else { "" };
            println!("{}{}", prefix, gifts[gift]);
        }

        println!(); 
    }
}
